{
  "manifest_version": 3,
  "name": "WordWeave",
  "version": "1.3.0",  // Update version
  "description": "Learn languages naturally while browsing with automatic translations powered by LibreTranslate",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://libretranslate.com/*",
    "https://api.mymemory.translated.net/*"
  ],
  "action": {  // Changed from browser_action
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "WordWeave",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"  // Changed for MV3
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/translator.js"],
    "css": ["content/styles.css"],
    "run_at": "document_idle"
  }],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [{
    "resources": ["content/styles.css"],
    "matches": ["<all_urls>"]
  }]
}
